<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="shoe"
            type="com.udacity.shoestore.models.Shoe" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shoe_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/shoe_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{shoe.name}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/shoe_name_label"
            app:layout_constraintStart_toEndOf="@+id/shoe_name_label" />

        <TextView
            android:id="@+id/shoe_company_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company:"
            app:layout_constraintTop_toBottomOf="@+id/shoe_name_label"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/shoe_company_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{shoe.company}"
            app:layout_constraintBaseline_toBaselineOf="@+id/shoe_company_label"
            app:layout_constraintStart_toEndOf="@+id/shoe_company_label" />

        <TextView
            android:id="@+id/shoe_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            app:layout_constraintTop_toBottomOf="@+id/shoe_company_label"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/shoe_size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Double.toString(shoe.size)}"
            app:layout_constraintBaseline_toBaselineOf="@+id/shoe_size_label"
            app:layout_constraintStart_toEndOf="@+id/shoe_size_label" />

        <TextView
            android:id="@+id/shoe_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            app:layout_constraintTop_toBottomOf="@+id/shoe_size_label"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/shoe_description_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{shoe.description}"
            app:layout_constraintBaseline_toBaselineOf="@+id/shoe_description_label"
            app:layout_constraintStart_toEndOf="@+id/shoe_description_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
